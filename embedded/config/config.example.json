{
    "wifi": {
        "essid": "********",
        "password": "********",
        "retry_count": 10
    },
    "mqtt": {
        "client_id": "my-smartgarden",
        "host": "192.168.1.5",
        "username": null,
        "password": null,
        "ssl_enabled": false
    },
    "main": {
        "process_interval": 15
    },
    "time": {
        "server": "za.pool.ntp.org"
    },
    "pins": [
        {
            "pin_number": null,
            "name": "Day Timer",
            "identifier": "day_timer",
            "analog": false,
            "read": true,
            "rules": [
                {
                    "action": "timer",
                    "input": {
                        "start_time": "07:00",
                        "end_time": "15:00"
                    }
                }
            ]
        },
        {
            "pin_number": 5,
            "name": "Soil Moisture Sensor",
            "identifier": "soil_moisture_sensor",
            "analog": false,
            "read": true,
            "rules": [
                {
                    "action": "read_bool_sample",
                    "input": {
                        "reverse": true,
                        "sample_size": 5
                    }
                }
            ]
        },
        {
            "pin_number": 4,
            "name": "Solenid Relay",
            "identifier": "solenoid_relay",
            "analog": false,
            "read": false,
            "rules": [
                {
                    "action": "toggle",
                    "input": {
                        "on": ["soil_moisture_sensor", "day_timer"]
                    }
                }
            ]
        }
    ]
}
